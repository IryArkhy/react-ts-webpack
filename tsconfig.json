{
  "compilerOptions": {
    "target": "ES2018",
    "rootDir": ".",
    "outDir": "./dist",
    "composite": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "cypress"],
    "allowJs": true,
    "module": "ES6",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "cypress"
  ]
}
